{% extends 'base.html.twig' %}

{% block title %}Marcador index{% endblock %}

{% block contenedor_principal %}
    <h1>Marcador index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Url</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for marcador in marcadors %}
            <tr>
                <td>{{ marcador.id }}</td>
                <td>{{ marcador.nombre }}</td>
                <td>{{ marcador.url }}</td>
                <td>
                    <a href="{{ path('marcador_show', {'id': marcador.id}) }}">show</a>
                    <a href="{{ path('marcador_edit', {'id': marcador.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('marcador_new') }}">Create new</a>
{% endblock %}
